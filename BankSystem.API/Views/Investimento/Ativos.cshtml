@model IEnumerable<BankSystem.Domain.Model.Ativo>

@{
    ViewData["Title"] = "Ativos Disponíveis";
}

<div class="container mt-4">

    <h3>💼 Ativos disponíveis para seu perfil</h3>

    <div class="row mt-3">
        @foreach (var ativo in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <h5>@ativo.Nome</h5>

                        <p class="text-muted mb-1">
                            @ativo.Simbolo
                        </p>

                        <p class="fw-bold text-success fs-5">
                            R$ @ativo.PrecoAtual.ToString("N2")
                        </p>

                        <form asp-action="Comprar" method="post" class="mt-auto">
                            <input type="hidden" name="ativoId" value="@ativo.Id" />

                            <input type="number"
                                   name="quantidade"
                                   step="0.01"
                                   min="0.01"
                                   class="form-control mb-2"
                                   placeholder="Quantidade"
                                   required />

                            <button class="btn btn-primary w-100">
                                Comprar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <a asp-action="Perfis" class="btn btn-outline-secondary mt-3">
        ⬅ Voltar para Perfis
    </a>
</div>
