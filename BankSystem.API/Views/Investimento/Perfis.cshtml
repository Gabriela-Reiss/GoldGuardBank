@{
    ViewData["Title"] = "Escolha seu Perfil";
}

<div class="container mt-4">

    <h3>📊 Escolha seu perfil de investimento</h3>
    <p class="text-muted">
        Os ativos exibidos serão compatíveis com seu perfil de risco
    </p>

    <div class="row mt-4">

        <div class="col-md-4">
            <a asp-controller="Investimento"
               asp-action="Ativos"
               asp-route-perfil="CONSERVADOR"
               class="card text-decoration-none shadow-sm">
                <div class="card-body text-center">
                    <h5>🟢 Conservador</h5>
                    <p class="text-muted">
                        Segurança e previsibilidade
                    </p>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-controller="Investimento"
               asp-action="Ativos"
               asp-route-perfil="MODERADO"
               class="card text-decoration-none shadow-sm">
                <div class="card-body text-center">
                    <h5>🔵 Moderado</h5>
                    <p class="text-muted">
                        Equilíbrio entre risco e retorno
                    </p>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-controller="Investimento"
               asp-action="Ativos"
               asp-route-perfil="ARROJADO"
               class="card text-decoration-none shadow-sm">
                <div class="card-body text-center">
                    <h5>🔴 Arrojado</h5>
                    <p class="text-muted">
                        Maior potencial de retorno
                    </p>
                </div>
            </a>
        </div>

    </div>

    <a asp-action="Index" class="btn btn-outline-secondary mt-4">
        ⬅ Voltar para Carteira
    </a>
</div>
